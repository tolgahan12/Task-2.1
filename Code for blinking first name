int led2 = D7;

void setup() {

  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);

}

void loop() {
  // To blink the LED, first we'll turn it on...
  //t
  //turn on
  digitalWrite(led2, HIGH);
  delay(3000);
  //turn off
  digitalWrite(led2, LOW);
  delay(2000);

